<% if user_signed_in? %>
    <% if project.favorited_by? current_user %>
        <%= link_to project_good_projects_path(project), method: :delete, remote: true, class: 'good' do %>
            <i class="material-icons favorited" style="position:relative;top: 6px;">thumb_up</i> <%= count %>
        <% end %>
    <% else %>
        <%= link_to project_good_projects_path(project), method: :post, remote: true, class: 'good' do %>
            <i class="material-icons" style="position:relative;top: 6px;">thumb_up</i> <%= count %>
        <% end %>
    <% end %>
<% else %>
    <i class="material-icons" style="position:relative;top: 6px;">thumb_up</i> <%= count %>
<% end %>
