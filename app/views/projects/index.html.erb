<h1>ポートフォリオ一覧</h1>


<div class="row">
  <div class="projectsList">
    <% @projects.each do |project| %>
      <div class="project">
        <% height = (project.youtube) ? 180 : 300 %>
        <%= link_to project_path(project.id) do %>
          <img src="<%= project.image %>" class="projectImage" width="320" height="<%= height %>">
        <% end %>

        <div class="panel panel-default">
          <div class="panel-body">
            <p><%= project.title %></p>
            <%= link_to "More", project_path(project), class: "btn btn-primary btn-raised text-center" %>
          </div>
          <div class="panel-footer">
            ここにお気に入りとかクリップとか
            <% if user_signed_in? && project.user == current_user %>
              <p><%= link_to 'Edit', edit_project_path(project) %></p>
              <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>         
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>